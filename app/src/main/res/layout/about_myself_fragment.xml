<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/aboutMyselfContainer"
            android:layout_width="287dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:orientation="vertical"></LinearLayout>

        <EditText
            android:id="@+id/aboutMyselfText"
            android:layout_width="287dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittext_style"
            android:ems="10"
            android:focusable="true"
            android:hint="@string/hint_text"
            android:inputType="textMultiLine"
            android:lines="4" />

        <Button
            android:id="@+id/buttonAboutMyselfAdd"
            android:layout_width="185dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_style"
            android:onClick="onAboutMyselfButtonClick"
            android:text="@string/append_button" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonAboutMyselfDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/button_style"
                android:onClick="onAboutMyselfButtonClick"
                android:text="@string/delete" />

            <Button
                android:id="@+id/buttonAboutMySelfBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/button_style"
                android:onClick="onAboutMyselfButtonClick"
                android:text="@string/back" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>